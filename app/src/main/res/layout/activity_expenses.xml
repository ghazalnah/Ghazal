<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="10"
    android:background="@drawable/marble">
    tools:context=".ExpensesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/searchImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:src="@drawable/ic_add222_black_24dp" />

        <Space
            android:layout_width="270dp"
            android:layout_height="20dp" />

        <ImageButton
            android:id="@+id/helpbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:src="@drawable/ic_help_outline_black_24dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvExpences"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIncome"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:drawableLeft="@drawable/ic_attach_money_black_24dp"
            android:background="@drawable/rounded_et2"
            android:text="Your Income is: " />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


    <TextView
        android:id="@+id/tvOutCome"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="@drawable/rounded_et2"
        android:drawableLeft="@drawable/ic_money_off_black_24dp"
        android:text="Your Outcome is: " />



    </LinearLayout>
</LinearLayout>
